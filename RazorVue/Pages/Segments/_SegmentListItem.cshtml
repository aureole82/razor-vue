<script type="text/html" id="segment-list-item-template">
    <tr class="">
        <td :height="minHeight">{{segment.start}}</td>
        <td>{{segment.length}}</td>
        <td>{{segment.description}}</td>
        <td>{{segment.type}}</td>
        <td>{{segment.rights}}</td>
        <td>{{segment.material?.description}}</td>
        <td> <button class="btn btn-danger" v-on:click="deleteSegment(segment.id)" aria-label="Delete segment"><i class="fa-solid fa-trash"></i></button> </td>
    </tr>
</script>
<script type="text/javascript">
    const SegmentListItem = {
        template: "#segment-list-item-template",
        props: ['segment'],
        computed: {
            minHeight() {
                return Math.min(150, Math.max(50, this.segment.length * 5));
            }
        },
        data() {
            return {
            };
        },
        methods: {
            deleteSegment: function(id) {
                this.$emit("segmentDeleted", id);
            }
        }
    };
</script>